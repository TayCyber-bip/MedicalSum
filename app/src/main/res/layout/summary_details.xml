<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C4FF">

    <View
        android:id="@+id/rectangle_bg2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_rectangle_home_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_turn_back_button"
        android:text="@string/back_button_arrow"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />


    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="300dp"
        android:layout_height="194dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_radiogroup_options"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangle_bg2">

        <RadioButton
            android:id="@+id/rb_extract"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:button="@drawable/custom_radio_button"
            android:checked="true"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/option_1"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb_short"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:button="@drawable/custom_radio_button"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/option_2"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb_tldr"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_radio_button"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/option_3"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RadioGroup>

    <EditText
        android:id="@+id/input_text"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_bg"
        android:gravity="start|top"
        android:hint="Enter text or web address..."
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_button_quiz"

        app:layout_constraintTop_toBottomOf="@id/input_text" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat_ai"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"

        android:layout_marginTop="16dp" android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btn_chat_ai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat with AI"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_button_chat_ai"

        app:layout_constraintTop_toBottomOf="@id/input_text" app:layout_constraintStart_toEndOf="@+id/btn_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"

        android:layout_marginTop="16dp" android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp" />

    <!-- Navigation bar -->
    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        />

    <ImageView
        android:id="@+id/library_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_icon"
        android:layout_marginStart="111dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_selected"/>

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>