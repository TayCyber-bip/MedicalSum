<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C4FF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangle_bg2"
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:background="@drawable/bg_rectangle_home_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/app_name"
        android:textColor="#333333"

        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/ui_image_icon"
        app:layout_constraintBottom_toBottomOf="@id/ui_image_icon"
        app:layout_constraintTop_toTopOf="@id/ui_image_icon"
        />

    <ImageView
        android:id="@+id/ui_image_icon"
        android:layout_width="186dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ui_image_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_bg2"/>

    <View
        android:id="@+id/rectangle_bg"
        android:layout_width="308dp"
        android:layout_height="182dp"
        android:background="@drawable/bg_rectangle_main_function"
        app:layout_constraintTop_toBottomOf="@id/rectangle_bg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="54dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintTop_toTopOf="@id/rectangle_bg"
        app:layout_constraintStart_toStartOf="@id/rectangle_bg"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_file"
        app:layout_constraintTop_toTopOf="@id/rectangle_bg"
        app:layout_constraintEnd_toEndOf="@id/rectangle_bg"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/gallery_icon"
        android:layout_width="52dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_bg"
        app:layout_constraintStart_toStartOf="@id/rectangle_bg"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Text input -->
    <EditText
        android:id="@+id/input_text"
        android:layout_width="0dp"
        android:layout_height="331dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_bg"
        android:gravity="start|top"
        android:hint="Enter text or web address..."
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/rectangle_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Copy icon -->
    <ImageView
        android:id="@+id/copy_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_copy"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@id/home_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="145dp"/>

    <!-- Navigation bar -->
    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_circle_selected"
        />

    <ImageView
        android:id="@+id/library_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_icon"
        android:layout_marginStart="111dp"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Apply"
        android:textStyle="bold"
        android:background="@drawable/bg_apply_button"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/input_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>